@inherits NBrightMod.render.NBrightModRazorTokens<NBrightDNN.NBrightRazor>
@using System.Linq
@using System
@using System.Web
@using System.Web.Configuration
@using NBrightDNN
@using RazorEngine.Text

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightMod/App_LocalResources/")


<style>
    body {
        margin: 20px;
        color: #595959;
        font-size: 14px;
        font-family: Segoe UI, Arial, Helvetica;
        line-height: 18px;
    }

    h2 {
        font-size: 30px;
        color: #242a31;
        line-height: 30px;
        font-family: Segoe UI, Arial, Helvetica;
    }

    .datatable {
        margin: 10px 0;
        border: none;
    }

        .datatable th {
            padding: 2px 10px;
            background: #f7f7f7;
        }

        .datatable td {
            padding: 2px 10px;
            text-align:center;
        }
</style>

<script>

    $(document).ready(function () {

    });

</script>

<div class="buttons "><button id="downloadallthemes" type="button" class="btn btn-default"><span class="glyphicon glyphicon-log-out"></span> @ResourceKey("Settings.downloadall")</button></div>

<table class="datatable" border="0" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th></th>
            <th>@ResourceKey("Settings.installed")</th>
            <th>@ResourceKey("Settings.download")</th>
        </tr>
    </thead>
    @foreach (NBrightInfo nbi in Model.List)
    {
        <tr>
            <td>
                <b>
                    @nbi.GetXmlProperty("genxml/hidden/filename")
                </b> 
            </td>
            <td>
                @if (nbi.GetXmlPropertyBool("genxml/hidden/installed"))
                {
                    <i class="glyphicon glyphicon-saved"></i>
                }
            </td>
            <td>
                <div class="buttons "><button type="button" class="btn btn-default downloadsingletheme" downloadzip="@nbi.GetXmlProperty("genxml/hidden/filename")"><span class="glyphicon glyphicon-save"></span></button></div>
            </td>
        </tr>
    }
</table>
