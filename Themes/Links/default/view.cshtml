@inherits NBrightMod.render.NBrightModRazorTokens<NBrightDNN.NBrightRazor>
@using System.Linq
@using NBrightDNN

@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/Themes/Links/resx/")


@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightMod/App_LocalResources/")
@AddPreProcessMetaData("orderby", "ORDER BY NB1.XMLData.value('(genxml/hidden/sortrecordorder)[1]','int')", "Links.view.cshtml", Model.ModuleId.ToString(""))

<h2>@ResourceKey("Edit.usefullinks")</h2>

<ul>
    
    @foreach (NBrightInfo info in Model.List)
    {
        var URL = info.GetXmlProperty("genxml/textbox/url");
        if (info.GetXmlPropertyBool("genxml/checkbox/newwindow"))
        {
            <li><a href="@(URL)">@info.GetXmlProperty("genxml/lang/genxml/textbox/title")</a></li>
        }
        else
        {
            <li><a href="@(URL)" target="_blank">@info.GetXmlProperty("genxml/lang/genxml/textbox/title")</a></li>
        }
    }

</ul>