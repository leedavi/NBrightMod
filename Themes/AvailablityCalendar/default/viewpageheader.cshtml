@using System.Security.Cryptography
@inherits NBrightMod.render.NBrightModRazorTokens<NBrightDNN.NBrightRazor>

<script type="text/javascript" src="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/js/jquery.plugin.min.js"></script>
<script type="text/javascript" src="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/js/jquery.datepick.min.js"></script>
@{
    var lang = @Model.GetUrlParam("language");
}

@if (System.IO.File.Exists("jquery.datepick-" + lang + ".js"))
{
    <script type="text/javascript" src="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/js/jquery.datepick-@(lang).js"></script>
}
else
{
    if (lang.Substring(0, 2) != "en") // default en
    {
        <script type="text/javascript" src="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/js/jquery.datepick-@(lang.Substring(0,2)).js"></script>
    }
}


@{
    var cstyle = @Model.GetSetting("calendarstyle");
    if (cstyle == "") cstyle = "smoothness.datepick.css";
}

@if (cstyle.StartsWith("ui-"))
{
    <script type="text/javascript" src="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/js/jquery.datepick.ext.min.js"></script>
    <link rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.10.3/themes/@(cstyle.Replace("ui-", "").Replace(".datepick.css", ""))/jquery-ui.css"/>
    <link rel="stylesheet" type="text/css" href="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/css/@(cstyle)"/>
}
else
{
    <link rel="stylesheet" type="text/css" href="/DesktopModules/NBright/NBrightMod/Themes/AvailablityCalendar/js/datepick/css/@(cstyle)"/>
}

