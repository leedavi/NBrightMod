@inherits NBrightMod.render.NBrightModRazorTokens<NBrightDNN.NBrightRazor>
@using System.Linq
@using System
@using System.Web
@using System.Web.Configuration
@using NBrightDNN
@using RazorEngine.Text

@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/App_LocalResources/")
@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/Themes/ContactDetails/resx/")

@{
    var info = (NBrightInfo)Model.List.First();
}

<h1>@info.GetXmlProperty("genxml/textbox/company")</h1>

<p>
@info.GetXmlProperty("genxml/textbox/address1")
@if (info.GetXmlProperty("genxml/textbox/address2") != "") {
<br />@info.GetXmlProperty("genxml/textbox/address2")
}
@if (info.GetXmlProperty("genxml/textbox/address3") != "") {
<br />@info.GetXmlProperty("genxml/textbox/address3")
}
@if (info.GetXmlProperty("genxml/textbox/address4") != "") {
<br />@info.GetXmlProperty("genxml/textbox/address4")
}
</p>

<p>
@if (info.GetXmlProperty("genxml/textbox/tel") != "") {
@ResourceKey("Edit.tel")@: : @info.GetXmlProperty("genxml/textbox/tel")
}
@if (info.GetXmlProperty("genxml/textbox/tel2") != "") {
<br />@ResourceKey("Edit.tel2")@: : @info.GetXmlProperty("genxml/textbox/tel2")
}
@if (info.GetXmlProperty("genxml/textbox/fax") != "") {
<br />@ResourceKey("Edit.fax")@: : @info.GetXmlProperty("genxml/textbox/fax")
}
@if (info.GetXmlProperty("genxml/textbox/email") != "") {
<br />@ResourceKey("Edit.email")@: : @EmailOf(info,"genxml/textbox/email")
}
</p>

@if (info.GetXmlProperty("genxml/textbox/contact1") != "") {
<p>
@info.GetXmlProperty("genxml/textbox/contact1")
@if (info.GetXmlProperty("genxml/textbox/contactport1") != "") {
<br />@ResourceKey("Edit.contactport")@: : @info.GetXmlProperty("genxml/textbox/contactport1")
}
@if (info.GetXmlProperty("genxml/textbox/contactemail1") != "") {
<br />@ResourceKey("Edit.contactemail")@: : @info.GetXmlProperty("genxml/textbox/contactemail1")
}
</p>
}

@if (info.GetXmlProperty("genxml/textbox/contact2") != "") {
<p>
@info.GetXmlProperty("genxml/textbox/contact2")
@if (info.GetXmlProperty("genxml/textbox/contactport2") != "") {
<br />@ResourceKey("Edit.contactport")@: : @info.GetXmlProperty("genxml/textbox/contactport2")
}
@if (info.GetXmlProperty("genxml/textbox/contactemail2") != "") {
<br />@ResourceKey("Edit.contactemail")@: : @info.GetXmlProperty("genxml/textbox/contactemail2")
}
</p>
}

@if (info.GetXmlProperty("genxml/lang/genxml/textbox/extrainfos") != "") {
<p>@BreakOf(info, "genxml/lang/genxml/textbox/extrainfos")</p>
}