@inherits NBrightMod.render.NBrightModRazorTokens<NBrightDNN.NBrightRazor>
@using System.Linq
@using NBrightDNN
@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightMod/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightMod//Themes/FancyboxMultiGallery/resx/")

@{
    var info = (NBrightInfo)Model.List.First();
}

<div>
    <div>
        @DnnLabel("lblimgresize", "Settings.imgresize")@TextBox(info, "genxml/textbox/imgresize", "class='form-control' width='100px' maxlength='5' ", "800")
    </div>
    <div>
        @DnnLabel("lblwidth", "Settings.width")@TextBox(info, "genxml/textbox/width", "class='form-control' width='100px' maxlength='5' ", "200")
    </div>
    <div>
        @DnnLabel("lblheight", "Settings.height")@TextBox(info, "genxml/textbox/height", "class='form-control' width='100px' maxlength='5' ", "130")
    </div>
    <div style="display:none">
        <!-- set flag so upload of files replaces the current selected -->
        @CheckBox(info, "genxml/checkbox/replaceimages", "", "", true);
    </div>
</div>
 
