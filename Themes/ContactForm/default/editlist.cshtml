@inherits NBrightMod.render.NBrightModRazorTokens<NBrightDNN.NBrightRazor>
@using System.Linq
@using NBrightDNN

@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/App_LocalResources/")
@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/Themes/GoogleMap/resx/")

    <div class="buttons">
        <button id="exitedit" type="button" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-log-out"></span>@ResourceKey("Edit.exit")</button>
        <button id="addnew" type="button" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-plus"></span>@ResourceKey("Edit.addnew")</button>
    </div>

<div class="row">
	<div class="col-xs-12 col-sm-12">
		<div class="box">
			<div class="box-content">
				<table class="table table-striped table-hover table-responsive">
					<thead>
						<tr>
							<th style="width:100%"></th>
                            <th style="width:100%"></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					@foreach (NBrightInfo x in @Model.List)
					{
                        // dummy record inject for empty list
                        if (@x.ItemID > 0 )
                        {
                             <tr>
                                 <td>@x.GetXmlProperty("genxml/textbox/clientemail")</td>
                                 <td>@x.GetXmlProperty("genxml/textbox/name")</td>
                                 <td><button type="button" class="btn btn-sm btn-primary edititem" itemid="@x.ItemID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
                             </tr>
                         }
					}

					</tbody>
				</table>
			</div>
		</div>

	</div>
</div>