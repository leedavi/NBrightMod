

@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/App_LocalResources/")
@AddMetaData("resourcepath","/DesktopModules/NBright/NBrightMod/Themes/OwlSlider/resx/")
@AddPreProcessMetaData("orderby", "ORDER BY NB1.XMLData.value('(genxml/hidden/sortrecordorder)[1]','int')", "OwlSlider.editlist.cshtml")

@EditCultureSelect("flag-list", "selecteditlistlanguage")


<div class="buttons">
        <button id="exitedit" type="button" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-log-out"></span>@ResourceKey("Edit.exit")</button>
        <button id="savelistdata" type="button" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-floppy-save"></span>@ResourceKey("Edit.save")</button>
        <button id="addnew" type="button" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-plus"></span>@ResourceKey("Edit.addnew")</button>
    </div>

<div class="row">
	<div class="col-xs-12 col-sm-12">
		<div class="box">
		    <div class="box-content">
		        <ul id="editdatalist">

		            @foreach (var x in Model.List)
		            {
		                // dummy record inject for empty list
		                if (@x.ItemID > 0)
		                {
		                    var imageurl = x.GetXmlProperty("genxml/imgs/genxml[1]/hidden/imageurl");
		                    <li class="datalistitem form-group">
		                        <div class="col-xs-12 form-horizontal">
		                            <div class="row">
		                                <div class="col-xs-3">
		                                    @if (imageurl != "")
		                                    {
		                                        <img src="/DesktopModules/NBright/NBrightData/NBrightThumb.ashx?src=@(imageurl)&w=100&h=50"/>
		                                    }
		                                </div>
		                                <div class="col-xs-3">@TextBox(x, "genxml/lang/genxml/textbox/title")<img src='/Images/Flags/@(x.Lang).gif' width='16px' /></div>
		                                <div class="col-xs-2">
		                                    <button type="button" class="btn btn-sm itemup" itemid="@x.ItemID"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></button>
		                                </div>
		                                <div class="col-xs-2">
		                                    <button type="button" class="btn btn-sm itemdown" itemid="@x.ItemID"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></button>
		                                </div>
                                        <div class="col-xs-2">
                                            <button type="button" class="btn btn-sm btn-primary edititem" itemid="@x.ItemID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                        </div>
                                        @HiddenField(x, "genxml/hidden/sortrecordorder", "", "")
                                        <input id="itemid" type="hidden" value="@x.ItemID"></input>
                                        <input id="moduleid" type="hidden" value="@x.ModuleId"></input>
                                        <input id="lang" type="hidden" value="@x.Lang"></input>
		                            </div>
		                        </div>
		                    </li>
		                }
		            }
		        </ul>
		    </div>
		</div>

	</div>
</div>